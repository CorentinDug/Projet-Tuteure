{% extends "v_layout.html.twig" %}
{% block contenu %}
    <div class="grid-y" style="height: 50px;">
    </div>
    <form method="post" action="{{ path("boisson.validFormEditBoisson") }} ">
        <div class=" grid-y" style="height: 500px; " >
            <div class="cell small-6 medium-4 large-10">
                <div class="grid-x" >
                    <div class="small-4 large-offset-3 cell" >
                        <div class="card" style ="color:whitesmoke; padding: 20px; border-radius: 50px; ">
                            <fieldset>
                                <legend style =" color:whitesmoke;">Modification du boisson: {{ donnees.type_boisson }}</legend>
                                <input type="hidden" name="_method" id="_method" value="put"/>
                                <input type="hidden" name="id_boisson" value="{{ donnees.id_boisson }}"/>
                                <label style =" color:whitesmoke;">Nom du boisson
                                    <input name="type_boisson"  type="text"  size="18" value="{{ donnees.type_boisson | default('') }}"/>
                                    {% if erreurs.type_boisson is defined %}
                                        <small class="error">{{erreurs.type_boisson}}</small>
                                    {% endif %}
                                </label>
                                <input type="submit" class = "boutonPerso button" name="modifierBoisson" value="modifier" >
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}