{% extends "v_layout.html.twig" %}
{% block contenu %}
    <div class ="grid">
        <div class="grid-noGutter" data-push-left="off-2">
            <div class="col-4">
                <form method="post" action="{{ path("boisson.validFormEditBoisson") }} ">
                    <div class="login-block">
                        <h1>Modification du boisson: {{ donnees.type_boisson }}</h1>
                        <input  type="hidden" name="_method" id="_method" value="put"/>
                        <input  type="hidden" name="id_boisson" value="{{ donnees.id_boisson }}"/>
                        <label >Nom du boisson  </label>
                        <input class="inputLoginBlock" name="type_boisson"  type="text"  size="18" value="{{ donnees.type_boisson | default('') }}"/>
                        {% if erreurs.type_boisson is defined %}
                            <small class="error">{{erreurs.type_boisson}}</small>
                        {% endif %}
                        <input type="submit" class = " button" name="modifierBoisson" value="modifier" >
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}