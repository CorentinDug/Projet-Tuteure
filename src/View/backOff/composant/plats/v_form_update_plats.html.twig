{% extends "v_layout.html.twig" %}
{% block contenu %}
    <div class ="grid">
        <div class="grid-noGutter" data-push-left="off-2">
            <div class="col-4">
                <form method="post" action="{{ path("plats.validFormEdit") }} ">
                    <div class="login-block">
                        <h1>Modifier un plats</h1>
                        <input type="hidden" name="_method" id="_method" value="put"/>
                        <input name="id"  type="hidden" value="{{donnees.id_plat}}" />
                        <label >Libelle :
                            <input class="inputLoginBlock" name="libelle_plat"  type="text"  size="18" value="{{donnees.libelle_plat}}" />
                            {% if erreurs.nom is defined %}
                                <small class="error">{{erreurs.nom}}</small>
                            {% endif %}
                        </label>
                        <input type="submit" class = " button" name="updatePlat" value="modifier" />
                        </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}