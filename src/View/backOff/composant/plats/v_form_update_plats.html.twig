{% extends "v_layout.html.twig" %}
{% block contenu %}
    <div class="grid-y" style="height: 50px;">
    </div>
    <form method="post" action="{{ path("plats.validFormEdit") }} ">
        <div class=" grid-y" style="height: 500px; " >
            <div class="cell small-6 medium-4 large-10">
                <div class="grid-x" >
                    <div class="small-4 large-offset-3 cell" >
                        <div class="card" style ="color:whitesmoke; padding: 20px; border-radius: 50px; ">
                            <fieldset>
                                <legend style =" color:whitesmoke; text-decoration: underline">Modifier un plats</legend>
                                <input type="hidden" name="_method" id="_method" value="put"/>
                                <input name="id"  type="hidden" value="{{donnees.id_plat}}" />
                                <label style =" color:whitesmoke;">Libelle :
                                    <input name="libelle_plat"  type="text"  size="18" value="{{donnees.libelle_plat}}" />
                                    {% if erreurs.nom is defined %}
                                        <small class="error">{{erreurs.nom}}</small>
                                    {% endif %}
                                </label>
                                <input type="submit" class = "boutonPerso button" name="updatePlat" value="modifier" />
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}