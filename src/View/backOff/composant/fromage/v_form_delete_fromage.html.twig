{% extends "v_layout.html.twig" %}
{% block contenu %}
    <form method="post" action="{{path('fromage.validFormDeleteFromage')}}">
        <div class="row">
            <fieldset>
                <input type="hidden" name="_method" id="_method" value="delete"/>
                <legend>Voulez-vous suprimer ce fromage ? (twig)</legend>
                <h3 id="blue">{{ donnees.libelle_fromage }}</h3>
                <input name="id"  type="hidden" value="{{donnees.id_fromage}}" />
                <input type="hidden"   name="_csrf_token"   value="{{ csrf_token('token_delete_fromage') }}">
                <input type="submit" name="suprimerFromage" value="Suprimer" />
            </fieldset>
        </div>
    </form>
{% endblock %}