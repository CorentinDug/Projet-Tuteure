{% extends "v_layout.html.twig" %}
{% block contenu %}
<div class="row">
    {% if app.session.get('roles') is defined and app.session.get('roles') == 'ROLE_ADMIN' %}
        <a href="{{ path('typePlat.add') }}"> Ajouter un type </a>
    {% endif %}
    <table>
    <caption>Recapitulatifs des types</caption>
    <thead>
        <tbody>
    <tr><th>id</th><th>libelle</th>
