{% extends "v_layout.html.twig" %}
{% block contenu %}
    <div class="grid-y" style="height: 50px;">
    </div>
    <form method="post" action="{{ path("typePlat.validFormAddTypePlat") }} ">
        <div class=" grid-y" style="height: 500px; " >
            <div class="cell small-6 medium-4 large-10">
                <div class="grid-x" >
                    <div class="small-4 large-offset-3 cell" >
                        <div class="card" style ="color:whitesmoke; padding: 20px; border-radius: 50px; ">
                            <fieldset>
                                <legend  style =" color:whitesmoke; text-decoration: underline">Créer un type</legend>
                                <label style =" color:whitesmoke;">Libellé:
                                    <input name="libelle" style="border-radius: 50px" type="text"  size="18" value="{{donnees.libelle|default("")}}" />
                                    {% if erreurs.libelle is defined %}
                                        <small class="error">{{erreurs.libelle}}</small>
                                    {% endif %}
                                </label>
                                <input type="hidden"   name="_csrf_token"   value="{{ csrf_token('token_add_type') }}">
                                <input type="submit" name="creerTypePlat" value="créer" />
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}